{
  "manifestVersion": 1,
  "id": "devrite-terraform-output",
  "publisher": "DevRite",
  "version": "1.0.8",
  "name": "Terraform Output",
  "description": "Adds a tab for Terraform Plan outputs",
  "public": false,
  "icons": {
    "default": "images/icon.png",
    "large": "images/icon.png"
  },
  "categories": [
    "Azure Pipelines"
  ],
  "tags": [
    "Terraform",
    "Output",
    "Plan",
    "HTML",
    "Tab",
    "DevOps"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "scopes": [
    "vso.release",
    "vso.build_execute"
  ],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "files": [
    {
      "path": "tasks/TerraformOutput"
    },
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "images/1.png",
      "addressable": true
    },
    {
      "path": "images/2.png",
      "addressable": true
    },
    {
      "path": "images/3.png",
      "addressable": true
    },
    {
      "path": "images/4.png",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "pipeline-terraform-tab",
      "type": "ms.vss-build-web.build-results-tab",
      "description": "Embed Terraform Output in Azure Pipelines Build",
      "targets": [
        "ms.vss-build-web.build-results-view"
      ],
      "properties": {
        "name": "Terraform Plan",
        "uri": "dist/TerraformTab/tabContent.html",
        "registeredObjectId": "registerBuild",
        "supportsTasks": [
          "197a8501-7995-444b-a0c7-17d69a1226ce"
        ],
        "dynamic": true
      }
    },
    {
      "id": "DevRiteTerraformOutput",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "tasks/TerraformOutput"
      }
    },
    {
      "id": "DevRitepullrequest-terraform-tab",
      "type": "ms.vss-web.tab",
      "description": "Embed Terraform Output in PRs",
      "targets": [
                "ms.vss-code-web.pr-tabs"
            ],
      "properties": {
        "name": "Terraform Plan",
        "uri": "dist/TerraformTab/tabContent.html",
        "registeredObjectId": "registerPullRequest"
      }
    }
  ]
}
